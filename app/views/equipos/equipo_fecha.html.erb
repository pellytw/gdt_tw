

<div class="row">
  <div class="span12">
    <div class="row">
      <div class="span6">
      	<span class="label label-info"> DISPONIBLES </span></br></br>
      	<ul>
      	<span class="label label-inverse">Arqueros</span>
      	<% @je_arqueros.each do |ja| %>
      		<label  id="<%=ja.id%>" class="arquero">
      			<span class="label label-success" > <%=ja.club %> - <%= ja %> </span>
      		</label>
      	<% end %> 
      	<span class="label label-inverse">Defensores centrales</span>
      	<% @je_defensores_centrales.each do |jdc| %>
      		<label id="<%=jdc.id%>" class="defensor_central">
      			<span class="label label-success"> <%=jdc.club %> - <%= jdc %> </span>
      		</label>
      	<% end %> 
      	<span class="label label-inverse">Defensores laterales</span>
      	<% @je_defensores_laterales.each do |jdl| %>
      		<label id="<%=jdl.id%>" class="draggable">
      			<span class="label label-success"> <%=jdl.club %> - <%= jdl %> </span>
      		</label>
      	<% end %>
      	<span class="label label-inverse">Volantes centrales</span>
      	<% @je_volantes_centrales.each do |jvc| %>
      		<label id="<%=jvc.id%>" class="draggable">
      			<span class="label label-success"> <%=jvc.club %> - <%= jvc %> </span>
      		</label>
      	<% end %> 
      	<span class="label label-inverse">Volantes laterales</span>
      	<% @je_volantes_laterales.each do |jvl| %>
      		<label id="<%=jvl.id%>" class="draggable">
      			<span class="label label-success"> <%=jvl.club %> - <%= jvl %> </span>
      		</label>
      	<% end %>
      	<span class="label label-inverse">Delanteros</span>
      	<% @je_delanteros.each do |jd| %>
      		<label id="<%=jd.id%>" class="draggable">
      			<span class="label label-success"> <%=jd.club %> - <%= jd %> </span>
      		</label>
      	<% end %>
        </ul>

      </div>
      <div class="span6">
      	<span class="label label-info"> TITULARES </span></br></br>
      	
      	<form>
      		<label> Arquero:  </label>
      		<div class="droppable" id="soltable_arqueros" name="arquero" >

      		</div>	      		
      		<label> Defensores centrales:  </label>
      		<div class="droppable" id="soltable_defensores_centrales" name="defensores_centrales">

      		</div>
      		<label> Defensores laterales:  </label>
      		<div class="droppable" id="soltable_defensores_laterales" name="defensores_laterales">

      		</div>
      		<label> Volantes centrales:  </label>
      		<div class="droppable" id="soltable_volantes_centrales" name="volantes_centrales">

      		</div>
      		<label> Volantes laterales:  </label>
      		<div class="droppable" id="soltable_volantes_laterales" name="volantes_laterales">

      		</div>
      		<label> Delanteros:  </label>
      		<div class="droppable" id="soltable_delanteros" name="delanteros">

      		</div></br>

      		<input type="submit" name="confirmar" value="confirmar equipo">
      	</form>
      
      </div>
    </div>
  </div>
</div>

      
      <!-- aca sÃ³lo permitimos que el arquero sea arrastrado a su posicion -->

      <% @je_arqueros.each do |ja| %>

            <script type="text/javascript">

               $(function() { 

                      $("#<%=ja.id%>").draggable();

                      $("#soltable_arqueros").droppable({

                           accept: ".arquero", 

                           drop: function( evento, ui ) {
                              var draggable = ui.draggable
                              var draggableId = ui.draggable.attr("id");
                              
                              // var algo = ui.draggable.find("a").attr("id")
                              ui.draggable.remove()
                              $(this).append("<input type='hidden' value="+ <%=ja.id%> +"><span class='label label-info'>" + draggable.text() + "</span>");

                        }
                        });
                  })

            </script>

      <% end %>

      <% @je_defensores_centrales.each do |jdc| %>

            <script type="text/javascript">

               $(function() { 

                      $("#<%=jdc.id%>").draggable();

                      $("#soltable_defensores_centrales").droppable({

                           accept: ".defensor_central",

                           drop: function( evento, ui ) {
                              var draggable = ui.draggable
                              var draggableId = ui.draggable.attr("id");
                              
                              // var algo = ui.draggable.find("a").attr("id")
                              ui.draggable.remove()
                              $(this).append("<input type='hidden' value="+ <%=jdc.id%> +"><span class='label label-info'>" + draggable.text() + "</span>");

                        }
                        });
                  })

            </script>

      <% end %>
