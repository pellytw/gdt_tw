<h1>Listado de equipos</h1>

<table class="table table-striped">
  <tr>
    <th>Nombre</th>
    <th>Participante</th>
    <% if can? :read, Equipo %><th></th><% end %>
    <% if can? :update, Equipo %><th></th><% end %>
    <% if can? :destroy, Equipo %><th></th><% end %>
  </tr>

<% @equipos.each do |equipo| %>
  <tr>
    <td><%= equipo.nombre %></td>
    <td><%= equipo.participante %></td>
    <% if can? :read, Equipo %> <td><%= link_to 'Ver', equipo %></td> <% end %>
    <% if can? :update, Equipo %> <td><%= link_to 'Editar', edit_equipo_path(equipo) %></td> <% end %>
    <% if can? :destroy, Equipo %> <td><%= link_to 'Eliminar', equipo, method: :delete, data: { confirm: 'EstÃ¡ seguro que desea eliminar?' } %></td><% end %>
  </tr>
<% end %>
</table>

